---
// Scripture of the Month Component
const currentDate = new Date();
const currentMonth = currentDate.toLocaleDateString('en-US', { month: 'long', year: 'numeric' });
---

<section class="scripture-section" id="scripture">
  <!-- Decorative Background Elements -->
  <div class="bg-decorations">
    <div class="decoration-circle decoration-top"></div>
    <div class="decoration-circle decoration-bottom"></div>
  </div>

  <div class="scripture-container">
    <div class="scripture-content fade-in-up">
      <!-- Badge -->
      <div class="badge-wrapper">
        <span class="badge">
          Scripture of the Month
        </span>
      </div>

      <!-- Month -->
      <p class="month-text">
        {currentMonth}
      </p>

      <!-- Scripture Verse -->
      <div class="verse-wrapper">
        <blockquote class="verse-text">
          "For unto us a <span class="highlight">Child is born</span>,<br>
          Unto us a <span class="highlight">Son is given</span>;<br>
          And the government will be upon His shoulder.<br>
          And His name will be called<br>
          <span class="highlight">Wonderful, Counselor, Mighty God</span>,<br>
          <span class="highlight">Everlasting Father, Prince of Peace</span>."
        </blockquote>

        <!-- Reference -->
        <cite class="verse-reference">
          â€” Isaiah 9:6 (NKJV)
        </cite>
      </div>
    </div>
  </div>
</section>

<style>
  .scripture-section {
    padding: 5rem 1.5rem;
    background: #000000;
    color: white;
    position: relative;
    overflow: hidden;
  }

  .bg-decorations {
    position: absolute;
    inset: 0;
    opacity: 0.1;
    pointer-events: none;
  }

  .decoration-circle {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
  }

  .decoration-top {
    top: 2.5rem;
    right: 2.5rem;
    width: 16rem;
    height: 16rem;
    background-color: var(--color-teal-mid);
  }

  .decoration-bottom {
    bottom: 2.5rem;
    left: 2.5rem;
    width: 24rem;
    height: 24rem;
    background-color: var(--color-gold);
  }

  .scripture-container {
    max-width: 56rem;
    margin: 0 auto;
    padding: 0 1.5rem;
    position: relative;
    z-index: 10;
  }

  .scripture-content {
    text-align: center;
  }

  .badge-wrapper {
    display: inline-block;
    margin-bottom: 1.5rem;
  }

  .badge {
    display: inline-block;
    background-color: rgba(255, 255, 255, 0.1);
    color: #ffffff;
    padding: 0.5rem 1.5rem;
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 300;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    backdrop-filter: blur(4px);
    border: 1px solid rgba(255, 255, 255, 0.3);
  }

  .month-text {
    color: #ffffff;
    font-size: 1.125rem;
    margin-bottom: 2rem;
    font-family: var(--font-family-secondary);
  }

  .verse-wrapper {
    margin-bottom: 2rem;
  }

  .verse-text {
    font-family: var(--font-family-secondary);
    font-size: clamp(1.5rem, 4vw, 2.25rem);
    font-weight: 300;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .highlight {
    color: var(--color-gold);
    font-weight: 300;
  }

  .verse-reference {
    color: #ffffff;
    font-size: 1.25rem;
    font-weight: 300;
    font-style: normal;
  }

  @media (min-width: 768px) {
    .verse-text {
      font-size: 2rem;
    }
  }

  @media (min-width: 1024px) {
    .verse-text {
      font-size: 2.25rem;
    }
  }
</style>

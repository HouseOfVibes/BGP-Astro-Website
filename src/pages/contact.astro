---
import Layout from '../layouts/Layout.astro';
import WebPageSchema from '../components/schema/WebPageSchema.astro';

const seoData = {
  title: "Contact Us - Believer's Gathering Place",
  description: "Get in touch with BGP. We'd love to hear from you and answer any questions you may have.",
  image: "/images/bgp-og-image.jpg?v=3",
};
---

<Layout {...seoData}>
  <WebPageSchema
    slot="head"
    pageName="Contact Us"
    pageDescription="Get in touch with Believers Gathering Place. Visit us at 2305 Lake Wheeler Drive, Raleigh. Sundays at 10:30 AM Eastern."
    pageUrl="https://bgpnc.com/contact"
    breadcrumbs={[
      { name: "Home", url: "https://bgpnc.com/" },
      { name: "Contact", url: "https://bgpnc.com/contact" }
    ]}
  />
  <section class="contact-section">
    <div class="contact-container">
      <!-- Section Header -->
      <div class="contact-header">
        <h1 class="contact-title">Contact Us</h1>
        <p class="contact-subtitle">We'd love to hear from you</p>
      </div>

      <!-- Location Map -->
      <div class="map-wrapper">
        <h2 class="map-title">Visit Us</h2>
        <div class="map-container">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3239.2427858676247!2d-78.66879468477043!3d35.74196798018758!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89ac5f0e9d8e5b5d%3A0x7e8b8e9f9e8e8e9e!2s2305%20Lake%20Wheeler%20Dr%2C%20Raleigh%2C%20NC%2027603!5e0!3m2!1sen!2sus!4v1646000000000!5m2!1sen!2sus"
            width="100%"
            height="400"
            style="border:0; border-radius: 8px;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            title="Believers Gathering Place Location Map - 2305 Lake Wheeler Drive, Raleigh, NC"
            aria-label="Google Maps showing Believers Gathering Place location at 2305 Lake Wheeler Drive, Raleigh, NC 27603"
          ></iframe>
        </div>
        <div class="location-info">
          <p class="address">
            <i class="fas fa-map-marker-alt"></i>
            2305 Lake Wheeler Drive, Raleigh, NC 27603
          </p>
          <p class="service-time">
            <i class="fas fa-clock"></i>
            Sunday Service: 10:30 AM Eastern
          </p>
          <a href="tel:+19192302074" class="phone-link">
            <i class="fas fa-phone"></i>
            (919) 230-2074
          </a>
        </div>
      </div>

      <!-- Contact Form -->
      <div class="form-wrapper">
        <form
          action="https://formsubmit.co/contact@bgpnc.com"
          method="POST"
          class="contact-form"
        >
          <!-- Honeypot -->
          <input type="text" name="_honey" style="display:none">

          <!-- Disable Captcha -->
          <input type="hidden" name="_captcha" value="false">

          <!-- Success Page -->
          <input type="hidden" name="_next" value="https://bgpnc.com/contact-thank-you">

          <!-- Subject -->
          <input type="hidden" name="_subject" value="New Contact Form Submission - BGP">

          <!-- Form Fields -->
          <div class="form-group">
            <label for="name">Name</label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="form-input"
              placeholder="Your name"
            />
          </div>

          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="form-input"
              placeholder="your.email@example.com"
            />
          </div>

          <div class="form-group">
            <label for="phone">Phone (Optional)</label>
            <input
              type="tel"
              id="phone"
              name="phone"
              class="form-input"
              placeholder="(555) 123-4567"
            />
          </div>

          <div class="form-group">
            <label for="message">Message</label>
            <textarea
              id="message"
              name="message"
              required
              class="form-textarea"
              placeholder="How can we help you?"
              rows="6"
            ></textarea>
          </div>

          <button type="submit" class="submit-button">
            Send Message
          </button>
        </form>
      </div>

    </div>
  </section>
</Layout>

<style>
  .contact-section {
    padding: 6rem 1.5rem;
    background-color: #ffffff;
    min-height: 70vh;
  }

  .contact-container {
    max-width: 800px;
    margin: 0 auto;
  }

  .contact-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .contact-title {
    font-family: var(--font-family-secondary);
    font-size: clamp(2.5rem, 6vw, 3.5rem);
    font-weight: 200;
    color: var(--color-primary-dark);
    margin-bottom: 1rem;
  }

  .contact-subtitle {
    font-size: 1.25rem;
    color: var(--color-text-light);
    font-weight: 300;
  }

  /* Map Section */
  .map-wrapper {
    margin-bottom: 4rem;
  }

  .map-title {
    font-family: var(--font-family-secondary);
    font-size: 2rem;
    font-weight: 200;
    color: var(--color-primary-dark);
    text-align: center;
    margin-bottom: 2rem;
  }

  .map-container {
    margin-bottom: 2rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    border-radius: 8px;
    overflow: hidden;
  }

  .location-info {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 2rem;
    background-color: var(--color-light-gray);
    border-radius: 8px;
    align-items: center;
  }

  @media (min-width: 768px) {
    .location-info {
      flex-direction: row;
      justify-content: space-around;
      padding: 2.5rem;
    }
  }

  .location-info p,
  .location-info a {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 1rem;
    color: var(--color-text-dark);
    margin: 0;
  }

  .location-info i {
    color: var(--color-gold);
    font-size: 1.25rem;
  }

  .phone-link {
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .phone-link:hover {
    color: var(--color-gold);
    transform: translateX(3px);
  }

  /* Form Wrapper with Black Background */
  .form-wrapper {
    background-color: #000000;
    border-radius: 12px;
    padding: 3rem 2rem;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  @media (min-width: 768px) {
    .form-wrapper {
      padding: 3rem 3.5rem;
    }
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .form-group label {
    font-family: var(--font-family-secondary);
    font-size: 0.95rem;
    font-weight: 300;
    color: #ffffff;
    letter-spacing: 0.02em;
  }

  .form-input,
  .form-textarea {
    padding: 0.875rem 1.25rem;
    border: 2px solid rgba(255, 255, 255, 0.2);
    border-radius: 8px;
    font-size: 1rem;
    font-family: var(--font-family-primary);
    background-color: rgba(255, 255, 255, 0.05);
    color: #ffffff;
    transition: all 0.3s ease;
  }

  .form-input::placeholder,
  .form-textarea::placeholder {
    color: rgba(255, 255, 255, 0.4);
  }

  .form-input:focus,
  .form-textarea:focus {
    outline: none;
    border-color: var(--color-gold);
    background-color: rgba(255, 255, 255, 0.1);
  }

  .form-textarea {
    resize: vertical;
    min-height: 150px;
  }

  .submit-button {
    background-color: var(--color-gold);
    color: #ffffff;
    font-family: var(--font-family-secondary);
    font-size: 1.1rem;
    font-weight: 400;
    padding: 1rem 2.5rem;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(156, 128, 64, 0.3);
    align-self: flex-start;
  }

  .submit-button:hover {
    background-color: var(--color-gold-hover);
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(156, 128, 64, 0.4);
  }

  @media (max-width: 640px) {
    .submit-button {
      width: 100%;
    }
  }
</style>
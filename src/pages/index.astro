---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/home/Hero.astro';
import ServiceInfo from '../components/home/ServiceInfo.astro';
import Values from '../components/home/Values.astro';
import ScriptureMonth from '../components/home/ScriptureMonth.astro';
import Leadership from '../components/home/Leadership.astro';
import ConnectWithUs from '../components/home/ConnectWithUs.astro';
import OrganizationSchema from '../components/schema/OrganizationSchema.astro';
import FAQSchema from '../components/schema/FAQSchema.astro';

const seoData = {
  title: "Believer's Gathering Place - Church in Raleigh, NC | Wake County",
  description: "Join BGP, a welcoming church in Raleigh, NC serving Wake County including Wendell, Knightdale, Garner, and Cary. Sunday services at 10:30 AM. All are welcome.",
  image: "/images/bgp-og-image.jpg",
};
---

<Layout {...seoData}>
  <OrganizationSchema slot="head" />
  <FAQSchema slot="head" />
  <Hero />
  <ServiceInfo />
  <ScriptureMonth />
  <Values />
  <Leadership />
  <ConnectWithUs />
</Layout>

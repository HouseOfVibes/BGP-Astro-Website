---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/home/Hero.astro';
import ServiceInfo from '../components/home/ServiceInfo.astro';
import Values from '../components/home/Values.astro';
import ScriptureMonth from '../components/home/ScriptureMonth.astro';
import Leadership from '../components/home/Leadership.astro';
import ConnectWithUs from '../components/home/ConnectWithUs.astro';
import OrganizationSchema from '../components/schema/OrganizationSchema.astro';

const seoData = {
  title: "Believer's Gathering Place - Church in Raleigh, NC",
  description: "Join BGP, a welcoming church in Raleigh, NC. Contemporary worship, biblical teaching, and authentic community. Sunday services at 10:30 AM. All are welcome.",
  image: "/images/bgp-og-image.jpg?v=3",
};
---

<Layout {...seoData}>
  <OrganizationSchema slot="head" />
  <Hero />
  <ServiceInfo />
  <ScriptureMonth />
  <Values />
  <Leadership />
  <ConnectWithUs />
</Layout>

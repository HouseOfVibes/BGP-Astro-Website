---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import WebPageSchema from '../../components/schema/WebPageSchema.astro';

const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const seoData = {
  title: "Blog & Devotionals - Believers Gathering Place",
  description: "Read inspiring devotionals, Scripture reflections, and ministry updates from BGP church in Raleigh, NC. Grow in faith with our Scripture of the Month series.",
  image: "/images/bgp-og-image.jpg?v=3",
};

function formatDate(date: Date): string {
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  }).format(date);
}
---

<Layout {...seoData}>
  <WebPageSchema
    slot="head"
    pageName="Blog & Devotionals"
    pageDescription="Read inspiring devotionals, Scripture reflections, and ministry updates from Believers Gathering Place in Raleigh, NC."
    pageUrl="https://bgpnc.com/blog"
    breadcrumbs={[
      { name: "Home", url: "https://bgpnc.com/" },
      { name: "Blog", url: "https://bgpnc.com/blog" }
    ]}
  />

  <!-- Hero Section -->
  <section class="blog-hero">
    <div class="hero-overlay"></div>
    <div class="hero-content">
      <h1 class="hero-title">Blog & Devotionals</h1>
      <p class="hero-subtitle">
        Grow in faith with Scripture reflections, ministry updates, and spiritual insights from BGP.
      </p>
    </div>
  </section>

  <!-- Blog Posts Section -->
  <section class="blog-section">
    <div class="blog-container">
      {sortedPosts.length === 0 ? (
        <div class="no-posts">
          <p>No blog posts yet. Check back soon for Scripture reflections and ministry updates!</p>
        </div>
      ) : (
        <div class="posts-grid">
          {sortedPosts.map((post) => (
            <article class="post-card">
              {post.data.image && (
                <a href={`/blog/${post.slug}`} class="post-image-link">
                  <img
                    src={post.data.image}
                    alt={post.data.title}
                    class="post-image"
                  />
                </a>
              )}

              <div class="post-content">
                {post.data.series && (
                  <span class="post-series">{post.data.series}</span>
                )}

                <h2 class="post-title">
                  <a href={`/blog/${post.slug}`}>{post.data.title}</a>
                </h2>

                <div class="post-meta">
                  <span class="post-author">By {post.data.author}</span>
                  <span class="post-date">{formatDate(post.data.pubDate)}</span>
                </div>

                <p class="post-description">{post.data.description}</p>

                {post.data.tags && post.data.tags.length > 0 && (
                  <div class="post-tags">
                    {post.data.tags.map((tag) => (
                      <span class="tag">{tag}</span>
                    ))}
                  </div>
                )}

                <a href={`/blog/${post.slug}`} class="read-more">
                  Read More â†’
                </a>
              </div>
            </article>
          ))}
        </div>
      )}
    </div>
  </section>
</Layout>

<style>
  /* Hero Section */
  .blog-hero {
    position: relative;
    min-height: 50vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background-image: url('/images/hero-bg.jpg');
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.7);
  }

  .hero-content {
    position: relative;
    z-index: 10;
    text-align: center;
    color: white;
    max-width: 56rem;
    padding: 0 1.5rem;
  }

  .hero-title {
    font-family: var(--font-family-secondary);
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 200;
    line-height: 1.2;
    margin-bottom: 1rem;
  }

  .hero-subtitle {
    font-size: clamp(1.125rem, 2.5vw, 1.5rem);
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.95);
    max-width: 42rem;
    margin: 0 auto;
  }

  /* Blog Section */
  .blog-section {
    padding: 5rem 1.5rem;
    background: linear-gradient(to bottom, #f9fafb 0%, white 100%);
  }

  .blog-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .no-posts {
    text-align: center;
    padding: 4rem 2rem;
    background: white;
    border-radius: 16px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }

  .no-posts p {
    font-size: 1.125rem;
    color: var(--color-text-light);
  }

  /* Posts Grid */
  .posts-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2.5rem;
  }

  @media (min-width: 768px) {
    .posts-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .posts-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  /* Post Card */
  .post-card {
    background: white;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  .post-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 30px rgba(45, 115, 115, 0.15);
  }

  .post-image-link {
    display: block;
    overflow: hidden;
  }

  .post-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .post-card:hover .post-image {
    transform: scale(1.05);
  }

  .post-content {
    padding: 2rem;
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .post-series {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-gold);
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 0.75rem;
  }

  .post-title {
    font-family: var(--font-family-secondary);
    font-size: 1.5rem;
    font-weight: 300;
    line-height: 1.3;
    margin-bottom: 1rem;
  }

  .post-title a {
    color: var(--color-primary-dark);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .post-title a:hover {
    color: var(--color-teal-dark);
  }

  .post-meta {
    display: flex;
    gap: 1rem;
    font-size: 0.875rem;
    color: var(--color-text-light);
    margin-bottom: 1rem;
    flex-wrap: wrap;
  }

  .post-author,
  .post-date {
    display: flex;
    align-items: center;
  }

  .post-description {
    color: var(--color-text-dark);
    line-height: 1.7;
    margin-bottom: 1.5rem;
    flex: 1;
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .tag {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background: #f3f4f6;
    color: var(--color-text-dark);
    font-size: 0.75rem;
    border-radius: 20px;
    transition: all 0.3s ease;
  }

  .tag:hover {
    background: var(--color-teal-light);
    color: white;
  }

  .read-more {
    display: inline-flex;
    align-items: center;
    color: var(--color-gold);
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
    margin-top: auto;
  }

  .read-more:hover {
    color: var(--color-gold-hover);
    transform: translateX(4px);
  }

  @media (max-width: 768px) {
    .blog-section {
      padding: 3rem 1rem;
    }

    .posts-grid {
      gap: 2rem;
    }

    .post-content {
      padding: 1.5rem;
    }
  }
</style>

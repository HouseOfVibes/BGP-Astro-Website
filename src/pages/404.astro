---
import Layout from '../layouts/Layout.astro';

const seoData = {
  title: "404 - Page Not Found | Believer's Gathering Place",
  description: "The page you're looking for doesn't exist. Return home to continue exploring our community.",
  image: "/images/bgp-og-image.jpg",
};
---

<Layout {...seoData}>
  <meta name="robots" content="noindex, nofollow" slot="head" />
  <section class="error-page">
    <div class="container">
      <div class="error-content">
        <h1 class="error-code">404</h1>
        <h2 class="error-title">Page Not Found</h2>
        <p class="error-description">
          The page you're looking for seems to have wandered off. But don't worry,
          you're always welcome here at Believer's Gathering Place.
        </p>
        <div class="error-actions">
          <a href="/" class="btn btn-primary">
            <i class="fas fa-home"></i>
            Return Home
          </a>
          <a href="/contact" class="btn btn-secondary">
            <i class="fas fa-envelope"></i>
            Contact Us
          </a>
        </div>
        <div class="helpful-links">
          <p class="helpful-title">You might be looking for:</p>
          <ul class="quick-links">
            <li><a href="/"><i class="fas fa-home"></i> Home</a></li>
            <li><a href="/join"><i class="fas fa-users"></i> Join Our Community</a></li>
            <li><a href="/give"><i class="fas fa-hand-holding-heart"></i> Give</a></li>
            <li><a href="/contact"><i class="fas fa-envelope"></i> Contact Us</a></li>
          </ul>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .error-page {
    min-height: calc(100vh - 200px);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 4rem 1.5rem;
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  }

  .container {
    max-width: 800px;
    width: 100%;
  }

  .error-content {
    text-align: center;
    animation: fadeIn 0.6s ease-in;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .error-code {
    font-size: 8rem;
    font-weight: 900;
    background: linear-gradient(135deg, var(--color-teal-dark) 0%, var(--color-gold) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 1rem;
    line-height: 1;
  }

  .error-title {
    font-size: 2.5rem;
    color: var(--color-text-dark);
    margin-bottom: 1.5rem;
    font-weight: 700;
  }

  .error-description {
    font-size: 1.25rem;
    color: var(--color-text-light);
    max-width: 600px;
    margin: 0 auto 3rem;
    line-height: 1.6;
  }

  .error-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 3rem;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    font-size: 1.1rem;
    font-weight: 600;
    text-decoration: none;
    border-radius: 8px;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .btn-primary {
    background: linear-gradient(135deg, var(--color-teal-dark) 0%, var(--color-gold) 100%);
    color: white;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(26, 77, 77, 0.3);
  }

  .btn-secondary {
    background: white;
    color: var(--color-teal-dark);
    border: 2px solid var(--color-teal-dark);
  }

  .btn-secondary:hover {
    background: var(--color-teal-dark);
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(26, 77, 77, 0.2);
  }

  .helpful-links {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
    max-width: 500px;
    margin: 0 auto;
  }

  .helpful-title {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--color-text-dark);
    margin-bottom: 1.5rem;
  }

  .quick-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }

  .quick-links li a {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    background: #f8f9fa;
    border-radius: 8px;
    text-decoration: none;
    color: var(--color-text-dark);
    transition: all 0.3s ease;
    font-weight: 500;
  }

  .quick-links li a:hover {
    background: linear-gradient(135deg, var(--color-teal-dark) 0%, var(--color-gold) 100%);
    color: white;
    transform: translateX(4px);
  }

  .quick-links li a i {
    font-size: 1rem;
    min-width: 20px;
  }

  @media (max-width: 768px) {
    .error-code {
      font-size: 5rem;
    }

    .error-title {
      font-size: 2rem;
    }

    .error-description {
      font-size: 1.1rem;
    }

    .error-actions {
      flex-direction: column;
      align-items: stretch;
    }

    .btn {
      width: 100%;
      justify-content: center;
    }

    .quick-links {
      grid-template-columns: 1fr;
    }

    .helpful-links {
      padding: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .error-page {
      padding: 2rem 1rem;
    }

    .error-code {
      font-size: 4rem;
    }

    .error-title {
      font-size: 1.5rem;
    }
  }
</style>
